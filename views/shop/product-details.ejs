<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-6">
                    <img src="/<%= product.imageURL %>" alt="<%= product.title %>" style="width: 100%;">
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-12">
                            <h1><%= product.title %> </h1>
                        </div>
                        <div class="col-12">
                            <p>
                                <%= product.description %>
                            </p>
                        </div>
                        <div class="col-12">
                            <h3 class="text-secondary">
                                $<%= product.price %>
                            </h3>
                        </div>
                        <div class="col-12" style="position: absolute; bottom: 0;right: 0;">
                            <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
    </main>
    <%- include('../includes/end.ejs') %>